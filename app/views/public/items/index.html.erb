<div class="container">
  <div class="row">
    <!--サイドバー-->
      <div class='col-md-2 px-sm-0 my-5 '>
        <%= render "layouts/genre"%>
      </div>
        <!--サイドバー-->
       <!--会員の商品一覧（public item index)-->
      <div class="col-md-9 px-sm-0 my-5 offset-md-1">
        <h4 class="text-left"><i class="fas fa-cookie-bite"></i> 商品一覧<small>(全 <%= @items.count %>件)</small></h4>
            <div class="row">
                 <% @items.each do |item| %>
                  <div class="col-md-3 my-3 text-center text-md-left">
                    <div class ="img_wrap">
                    <%= link_to attachment_image_tag(item, :image, :fill, 500, 350, format: 'jpeg', fallback: "no_image.jpg",size:'150x120'),item_path(item.id) %></div><br>
                    <%= link_to item.name,item_path(item) %><br>
                    ¥<%= item.taxin_price %>
                    </div>
                <% end %>
                  </div>
           <%= paginate(@items) %>
      </div>
  </div>
</div>

