<div class="container">
  <div class="row">
　　<div class="col-xs-12 mt-3">
 　　　<h4><i class="fas fa-address-book"></i> 注文履歴詳細</h4>
 　　</div>
 　</div>
 　
<div class="row">
 <div class="col-xs-12 mt-3">
    <table class="table table-bordered table-condensed">
      <tbody>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.postcode %><br>
            <%= @order.address %><br>
            <%= @order.name %>
            </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </tbody>
    </table>
    
    <strong>請求情報</strong>
    <table class="table table-bordered table-condensed">
      <tr>
        <th>商品合計</th>
        <td><%= @order.billing_amount.to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.postage %>円</td>
      </tr>
      <tr>
        <th>ご請求金額</th>
        <td><%= (@order.postage + @order.billing_amount).to_s(:delimited) %>円</td>
      </tr>
    </table>
    
    
    <strong>注文内容</strong>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>合計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.tax_in_price.to_s(:delimited) %>円</td>
          <td><%= order_detail.order_quantity  %></td>
          <td><%= (order_detail.item.taxin_price * order_detail.order_quantity).to_s(:delimited)  %>円</td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
    
        <%= link_to "注文履歴一覧へ戻る", orders_path, class: "btn btn-info btn-lg order-index-back" %>
        <% else %>
        <p>注文履歴がありません</p>
        <% end %>
 　　</div>
 　</div>
</div>