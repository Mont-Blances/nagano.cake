<p><strong>注文履歴詳細</strong></p>
<table border="1" style="border-collapse: collapse">
   <tr>
     <th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
   </tr>
   <tr>
     <th>配送先</th><td>〒<%= @order.postcode %></br><%= @order.address %></br><%= @order.destination %></td>
   </tr>
   <tr>
     <th>支払方法</th><td><%= @order.payment_method_i18n %></td>
   </tr>
   <tr>
     <th>ステータス</th><td><%= @order.order_status_i18n %></td>
   </tr>
</table>

<p><strong>請求情報</strong></p>
<table border="1" style="border-collapse: collapse">
  <tr>
     <th>商品合計</th><td><%= @order.billing_amount.to_s(:delimited) %></td>
  </tr>
  <tr>
     <th>配送料</th><td><%= @order.postage %></td>
  </tr>
    <tr>
     <th>ご請求金額</th><td><%= (@order.postage + @order.billing_amount).to_s(:delimited) %></td>

</table>

<p><strong>注文内容</strong></p>
<table border="1" style="border-collapse: collapse">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.taxin_price.to_s(:delimited) %></td>
      <td><%= order_detail.order_quantity %></td>
      <td><%= (order_detail.item.taxin_price * order_detail.order_quantity).to_s(:delimited) %></td>
    </tr>
    <% end %>
  </tbody>

</table>