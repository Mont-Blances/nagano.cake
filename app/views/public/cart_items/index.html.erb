<h1>ショッピングカート</h1>
<div><%= link_to "カートを空にする", destroy_all_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></div>
<% @cart_items.each do |cart_item| %>

<table border="1" style="border-collapse: collapse">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.taxin_price.to_s(:delimited) %>円</td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local:true do |f| %>

        <div class="input-group">
          <%= f.select :quantity, options_for_select(1..10, {selected: cart_item.quantity} ), class: "form-control" %>
          <%= f.submit "変更",class:"btn btn-dark btn-sm" %>
        </div>
        <% end %>
      </td>
      <td>
        <%= cart_item.sum_taxin_price.to_s(:delimited) %>
      </td>
      <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
    </tr>

  </tbody>

</table>
<% end %>
<%= link_to "買い物を続ける", items_path, class: "btn btn-sm btn-primary" %>

<%= link_to "情報入力に進む", new_order_path, class: "btn btn-sm btn-success" %>
<div><%= @total.to_s(:delimited) %></div>