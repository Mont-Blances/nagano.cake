

<div class="container">
  <div class="row">
　　<div class="col-xs-12 mt-3">
 　　　<h4><i class="fas fa-pen"></i> 配送先編集</h4>
 　　</div>
 　</div>

    <%= render "layouts/error_message", resource:  @delivery %>
    <%= form_with(model:  @delivery, url: derivery_path(@delivery), local: true, method: :patch) do |f| %>

    <div class="addres col-xs-10 col-sm-10 col-md-10 col-lg-10 mb-5 ">
      <div class="form-group row">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-6 control-label" %>
        <%= f.text_field :postcode, class: "col-6 form-control-static postal_code" %>
      </div>
      <div class="form-group row">
        <%= f.label :"住所", class: "col-6 control-label" %>
        <%= f.text_field :address, class: "col-6 form-control-static address" %>
      </div>
      <div class="form-group row">
        <%= f.label :"宛名", class: "col-6 control-label" %>
        <%= f.text_field :destination, class: "col-6 form-control-static name" %>
      </div>
      <div class="form-group text-right">
        <%= f.submit '変更内容を保存', class: "col-3 text-center btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>