<h2>Sign up</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :性 %><br />
    <%= f.text_field :family_name %>
  </div>

  <div class="field">
    <%= f.label :名 %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :セイ %><br />
    <%= f.text_field :family_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メイ %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :郵便番号ハイフンなし %><br />
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :adress %>
  </div>

  <div class="field">
    <%= f.label :電話番号ハイフンなし %><br />
    <%= f.text_field :tel %>
  </div>

  <div class="field">
    <%= f.label :パスワード6文字以上 %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
