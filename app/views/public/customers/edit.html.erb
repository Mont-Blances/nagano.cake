<h3>会員情報編集</h3>
<%= render 'layouts/errors', obj: @customer %>
<%= form_with model:@customer, url: customers_update_path, local:true do |f| %>
<table class="customer">
  <tr>
    <th>氏名</th>
    <td>
      <%= f.text_field :family_name %>
      <%= f.text_field :first_name %>
    </td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td>
      <%= f.text_field :family_name_kana %>
      <%= f.text_field :first_name_kana %>
    </td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= f.text_field :postcode %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :adress %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= f.text_field :tel %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
</table>
<%= f.submit '編集内容を保存' %>
<% end %>