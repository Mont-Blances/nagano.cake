<div class="container">
   <div class="row">
　　  <div class="col-xs-12 mt-3">
 　　  　  <h4><i class="fas fa-user-circle"></i>マイページ</h4>
 　  　</div>
 　</div>
   <div class="row">
      <p>登録者情報</p>
      <p><%= link_to "編集する",  customers_my_page_edit_path, class: "btn btn-success ml-5" %></p>
      <table class="table">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= @customer.family_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.family_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.tel %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="mr-5">
        <p>配送先</p>
        <p><%= link_to "一覧を見る", deriveries_path ,class: "btn btn-primary"%></p>
      </div>
      <div class="ml-5">
        <p>注文履歴</p>
        <p><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></p>
      </div>
    </div>
</div>

