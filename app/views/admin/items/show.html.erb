<h1>商品詳細</h1>

 <%= attachment_image_tag @item, :image, :fill, 500, 350, class:"icon border", fallback: "no_image.jpg" ,size:'350x300'%>

<table>
  <thead>
  <tr><th>商品名</th><td><%= @item.name %></td></tr>
  <tr><th>商品説明</th><td><%= @item.item_introduction %></td></tr>
  <tr><th>ジャンル</th><td><%= @item.genre.name %></td></tr>
  <tr><th>税込価格</th><td><%= (@item.price * 1.1).floor %>(<%= @item.price %>)円</td></tr>
  <tr><th>販売ステータス</th><td><%= @item.is_active == true ? "販売中" : "販売停止中" %></td></tr>
</table>

<%= link_to "編集する", edit_admin_item_path(@item) %>
