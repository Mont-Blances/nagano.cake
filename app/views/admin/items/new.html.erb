<h1>商品新規登録</h1>
<%= form_with model: [:admin, @item], local:true do |f| %>
<table>
  <tr><th>商品画像</th><td><%= f.attachment_field :image %></td></tr>
  <tr><th>商品名</th><td><%= f.text_field :name %></td></tr>
  <tr><th>商品説明</th><td><%= f.text_area :item_introduction %></td></tr>
  <tr><th>ジャンル</th><td><%= f.select :genre_id, [['選択してください',0],['genre.name',1]], { include_blank: 0, selected: 1 } %></td></tr>
  <tr><th>税抜価格</th><td><%= f.text_field :price %></td></tr>

</table>

<%= f.label :is_active, '販売中', value: true %>
<%= f.radio_button :is_active, 'true' %>

<%= f.label :is_active, '販売停止中', value: false %>
<%= f.radio_button :is_active, 'false' %>

<%= f.submit '変更を保存',class: "btn btn-success" %>
<% end %>