<h1>商品新規登録</h1>
<%= form_with model: [:admin, @item], local:true do |f| %>
<table>
  <tr><th>商品画像</th><td><%= f.attachment_field :image %></td></tr>
  <tr><th>商品名</th><td><%= f.text_field :name %></td></tr>
  <tr><th>商品説明</th><td><%= f.text_area :item_introduction %></td></tr>
  <tr><th>ジャンル</th><td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td></tr>
  <tr><th>税抜価格</th><td><%= f.text_field :price %>円</td></tr>

</table>

<%= f.label :is_active, '販売中', value: true %>
<%= f.radio_button :is_active, 'true' %>

<%= f.label :is_active, '販売停止中', value: false %>
<%= f.radio_button :is_active, 'false' %>

<%= f.submit '新規登録',class: "btn btn-success" %>
<% end %>