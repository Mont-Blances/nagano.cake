<div class="container col-xs-6">
  <div class="row">
　　<div class="col-xs-12 mt-3">
 　　　<h4><i class="fas fa-shopping-cart"></i>注文履歴一覧</h4>
 　　</div>
 　</div>
  <div class="row">
      <table class="table table-light table-striped">
        <thead>
          <tr class="text-white bg-dark">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
      
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), class:"text-dark", style: "text-decoration:underline;" %></td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_details.sum(:order_quantity) %></td>
              <td><%= order.order_status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
　</div>
</div>  

