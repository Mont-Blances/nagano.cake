<h2>会員一覧</h2>
<table class="customers_table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to "/admin/customers/#{customer.id}" do %>
        <%= customer.family_name %><%= customer.first_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <% if customer.is_registered == true %>
        <td><strong>有効</strong></td>
      <% else %>
        <td><strong>退会</strong></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
