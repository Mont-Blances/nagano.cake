<%= render 'layouts/errors', obj: @customer %>
<h3><%= @customer.family_name%>　<%= @customer.first_name %>さんの会員情報編集</h3>
<%= form_with model:@customer, url: admin_customer_path(@customer), local:true do |f| %>
<table class="customer_edit">
  <tr>
    <th>氏名</th>
    <td>
      <%= f.text_field :family_name %>
      <%= f.text_field :first_name %>
    </td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td>
      <%= f.text_field :family_name_kana %>
      <%= f.text_field :first_name_kana %>
    </td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= f.text_field :postcode %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= f.text_field :tel %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td>
      <%= f.radio_button :is_registered, true %>
      <%= f.label :is_registered, "有効", value: true %>
      <%= f.radio_button :is_registered, false %>
      <%= f.label :is_registered, "無効", value: false %>
    </td>
  </tr>
</table>
<%= f.submit '編集内容を保存' %>
<% end %>